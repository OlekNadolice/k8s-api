{
  "compilerOptions": {
    "target": "ES2024",           
    "module": "ESNext",         
    "outDir": "./dist",          
    "rootDir": "./src", 
    "moduleResolution": "node",         
    "strict": true,               
    "esModuleInterop": true,      
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true          
  },
  "include": ["src/**/*"],        
  "exclude": ["node_modules", "dist"]
}